package com.practice;
import java.util.Random;
import java.util.Scanner;

class Employee{
	String firstName,lastName,department;
	int ch;
	Scanner ob = new Scanner(System.in);
	void setDetails() {
		System.out.println("Enter the First name");
		firstName = ob.next();
		System.out.println("Enter the Last name");
		lastName = ob.next();
		System.out.println("enter your department");
		System.out.println("1. technical");
		System.out.println("2. Admin");
		System.out.println("3. Human Resources");
		System.out.println("4. legal");
		int choice = ob.nextInt();
		switch(choice) {
		case 1: department = "technical";break;
		case 2: department = "Admin";break;
		case 3: department = "HumanResources";break;
		case 4: department = "legal";break;
		default: System.out.println("invalid choice");
		department = "general";
		}
	}
	void Display() {
		System.out.println("Name: "+firstName+" "+lastName);
		System.out.println("Department:"+department);
	}
	void Email() {
		System.out.println("Email: "+firstName+lastName+"@"+department+".skit.ac.in");
	}
}

class password{
	public char[] generatePassword() {
		String capitalLetters ="ABCDEFGHIJKLMNOPQRSTUVWXYZ";
		String smallLetters ="abcdefghijklmnopqrstuvwxyz";
		String numbers="0123456789";
		String specialCharacters = "!@#$%^&*()_{}:<>?";
		
		String values = capitalLetters+smallLetters+numbers+specialCharacters;
		Random random = new Random();
		
		char[] passwords = new char[8];
		for(int i =0;i<8;i++) {
			passwords[i]=values.charAt(random.nextInt(values.length()));
		}
		for(int i =0;i<8;i++) {
			System.out.print(passwords[i]);
		}
		
		return passwords;
	}
}

public class Credential {

	public static void main(String[] args) {
		Employee emp = new Employee();
		password p = new password();
		emp.setDetails();
		emp.Display();
		emp.Email();
		p.generatePassword();
	}
}
